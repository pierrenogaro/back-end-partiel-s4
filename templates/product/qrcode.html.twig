{% extends 'base.html.twig' %}

{% block title %}QR Code for {{ product.name }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('app_product_index') }}">Products</a></li>
                <li class="breadcrumb-item"><a href="{{ path('app_product_show', {'id': product.id}) }}">{{ product.name }}</a></li>
                <li class="breadcrumb-item active" aria-current="page">QR Code</li>
            </ol>
        </nav>

        <div class="text-center">
            <h1 class="mb-4">QR Code for {{ product.name }}</h1>

            <div class="card mx-auto mb-4" style="max-width: 400px;">
                <div class="card-body">
                    <div class="mb-4">
                        <img src="{{ qrcode }}" alt="QR Code for {{ product.name }}" class="img-fluid">
                    </div>

                    <h5 class="card-title">{{ product.name }}</h5>
                    <p class="card-text text-primary fw-bold">{{ product.price|number_format(2, '.', ',') }} â‚¬</p>

                    <div class="d-grid gap-2">
                        <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-primary">Back to product</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
