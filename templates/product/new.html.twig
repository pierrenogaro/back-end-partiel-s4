{% extends 'base.html.twig' %}

{% block title %}New product{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Create a new product</h1>

        <div class="card shadow-sm">
            <div class="card-body">
                {{ form_start(form) }}
                {{ form_row(form.name, {'label': 'Name', 'attr': {'class': 'form-control'}}) }}
                {{ form_row(form.description, {'label': 'Description', 'attr': {'class': 'form-control', 'rows': 5}}) }}

                <div class="mb-3">
                    {{ form_label(form.price, 'Price') }}
                    <div class="input-group">
                        {{ form_widget(form.price, {'attr': {'class': 'form-control', 'step': '0.01', 'min': '0'}}) }}
                        <span class="input-group-text">â‚¬</span>
                    </div>
                </div>

                {% if form.image is defined %}
                    {{ form_row(form.image) }}
                {% endif %}

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a href="{{ path('app_product_index') }}" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-primary">Create product</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
